<Application x:Class="SnakeWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SnakeWPF"
             Startup="Application_Startup">
    <Application.Resources>
        <FontFamily x:Key="Default-Font">pack://application:,,,Assets/Fonts/#Press Start 2P Regular</FontFamily>
        <Style TargetType="{x:Type Window}">
            <Setter Property="FontFamily" Value="{StaticResource Default-Font}" />
        </Style>
    </Application.Resources>
</Application>
